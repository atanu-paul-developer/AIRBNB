<% layout('/layouts/boilerplate') -%>

<style>
  #tax-info {
    visibility: hidden;
  }
</style>

<div id="filters">
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-warehouse"></i></div>
    <p>Treehouse</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beachfront</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountain House</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castle</p>
  </div>
  <div
    class="filter"
    style="text-align: center; margin-left: 2rem; margin-top: 1rem"
  >
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Swiming Pool</p>
  </div>

  <div
    class="form-check form-switch form-check-reverse switchBtn"
    style="
      border: 1px solid black;
      border-radius: 25px;
      height: 70px;
      margin-top: 15px;
      margin-left: 200px;
    "
  >
    <input
      class="form-check-input"
      type="checkbox"
      id="flexSwitchCheckReverse"
      style="margin-top: 26px; margin-right: 10px; margin-left: 10px"
    />
    <label
      class="form-check-label"
      for="flexSwitchCheckReverse"
      style="margin-top: 20px; margin-left: 20px"
      >Display total before taxes</label
    >
  </div>
</div>

<br />
<h1>All listings :</h1>
<br />

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (list of allListings) { %>
  <div class="card col">
    <a href="/listings/<%= list._id %>">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="list_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay">
        <i class="fa-solid fa-font-awesome"></i>
      </div>
    </a>
    <div class="card-body">
      <p class="card-text">
        <b><%= list.title %></b>
        <br />
        &#8377; <%=list.price%> /night
        <i id="tax-info">&nbsp; &nbsp; +18 GST</i>
      </p>
    </div>
  </div>
  <% } %>
</div>

<br /><br /><br /><br />

<script>
    let switchButton = document.querySelector("#flexSwitchCheckReverse");
    let taxInfoElements = document.querySelectorAll("#tax-info"); // Select all elements with id 'tax-info'

    switchButton.addEventListener("click", () => {
        taxInfoElements.forEach(tax => {
            tax.style.visibility = switchButton.checked ? 'visible' : 'hidden';
        });
    });
</script>